@using U5_W1_P.Models
@model IEnumerable<Trasgressore>

@{
    ViewBag.Title = "Index";
}

<h2>Elenco Trasgressori</h2>

<p>@Html.ActionLink("Nuovo Trasgressore", "Create")</p>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Cognome</th>
        <th>Indirizzo</th>
        <th>Città</th>
        <th>CAP</th>
        <th>Codice Fiscale</th>
        <th></th>
    </tr>

    @foreach (Trasgressore trasgressore in Model)
    {
        <tr>
            <td>@trasgressore.Nome</td>
            <td>@trasgressore.Cognome</td>
            <td>@trasgressore.Indirizzo</td>
            <td>@trasgressore.Città</td>
            <td>@trasgressore.CAP</td>
            <td>@trasgressore.Cod_Fisc</td>
            <td>
                @Html.ActionLink("Dettagli", "Details", new { id = trasgressore.idanagrafica })
                @Html.ActionLink("Modifica", "Edit", new { id = trasgressore.idanagrafica })
                @Html.ActionLink("Elimina", "Delete", new { id = trasgressore.idanagrafica })
            </td>
        </tr>
    }
</table>